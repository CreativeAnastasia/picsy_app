<div class="container signup">
<div class="main-login main-center">

  <h1>Sign Up</h1>
  <%= form_for @user do |f| %>
    <% if @user.errors.any? %>
      <div class="error_messages">
        <h2>bummer, something is not right here</h2>
        <ul>
          <% for message in @user.errors.full_messages %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>
    <div class="field form-group">
      <%= f.text_field :first_name, placeholder: "first name", class: "form-control" %>
    </div>
    <div class="field form-group">
      <%= f.text_field :last_name, placeholder: "last name", class: "form-control" %>
    </div>
    <div class="field form-group">
      <%= f.text_field :email, placeholder: "email", class: "form-control" %>
    </div>
    <div class="field form-group">
      <%= f.password_field :password, placeholder: "password", class: "form-control" %>
    </div>
    <div class="field form-group">
      <%= f.password_field :password_confirmation, placeholder: "sorry, password again:(", class: "form-control" %>
    </div>
    <div class="actions"><%= f.submit "yayy! finally done", class: "btn btn-sm btn-warning form-control"%></div>
  <% end %>
</div>
</div>


