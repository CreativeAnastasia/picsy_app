
<div class="container signup">
<div class="main-login main-center">

<h1>Log In</h1>

<p id="alert"><%= alert %></p>
  <%= form_tag sessions_path do %>
  <div class="field form-group">
    <%= text_field_tag :email, params[:email], placeholder: "email", class: "form-control"%>
  </div>

  <div class="field form-group">
    <%= password_field_tag :password, params[:password], placeholder: "password", class: "form-control"%>
  </div>


  <div class="actions">
      <div class="actions"><%= submit_tag "login", class: "btn btn-sm btn-success form-control"%></div>

  </div>
<% end %>
  </div>
  </div>












